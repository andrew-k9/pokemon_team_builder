<h1>Hello <%= @user.name %>!</h1>
<h2>Trainer Info:</h2>

<p id="text-info" class="p-3 mb-2 bg-secondary text-white rounded">
  <strong>Trainer Name:</strong> <%=@user.username%></br>
  <strong>Name:</strong> <%=@user.name%></br>
  <strong>About:</strong></br> <%=@user.about%></br>
</p>

<h2>Teams:</h2>
<ul class="list-group list-group-flush rounded">
  <% @teams.each do |team| %>
    <li class="list-group-item list-group-item-dark"><%=link_to team.name, team_path(team)%> </li>
  <% end %>
</ul>

<%= button_to "Create New Team",
  new_user_team_path(@user),
  method: :get,
  class:"btn btn-secondary bottom-button" if logged_in?(@user)%>
</br>