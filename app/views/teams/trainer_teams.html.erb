<h1>Your Teams</h1>

<% @teams.each do |team| %>
  <h3><%=team.name%></h3>
  <%= render partial: "pokemons/stats", locals: { pokemons: team.pokemons, general_info: true } %>
  <%= render partial: "bottom_buttons", locals: {user: @user, team: team} %>
<% end %>

<%= button_to "Create New Team",
  new_user_team_path(@user),
  method: :get,
  class: "btn btn-secondary bottom-button" if logged_in?(@user)%></br>