<h1>Create Trainer Account</h1>

<%if @user.errors.any? %>
  <h2>Unable to save user!</h2>
  <% @user.errors.messages.each do |key, value| %>
    <%="#{key}: #{value}\n"%></br>
  <% end %></br>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label "Username:" %></br>
  <%= f.text_field :username%></br>
  <%= f.label "Password:" %></br>
  <%= f.password_field :password%></br>
  <%= f.label "Confirm Password:" %></br>
  <%= f.password_field :password_confirmation%></br>
  <%= f.label "Name (Doesn't have to be real):" %></br>
  <%= f.text_field :name%></br>
  <%= f.label "About you:" %></br>
  <%= f.text_area :about%></br>
  <%= f.submit "Create User"%>
<% end %>