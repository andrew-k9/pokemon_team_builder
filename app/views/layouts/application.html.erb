<!DOCTYPE html>
<html>
  <head>
    <title>PokemonTeamBuilder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="menu-bar">
      <% if session[:user_id].blank? %>
        <%= button_to "Login", sessions_path, method: :delete %>
      <% else %>
        <%= button_to "Logout", sessions_path, method: :delete %>
        <%= button_to "Home", user_path(current_user), method: :get %>
      <% end %>
    </div>
    <div id="flash-messages">
      <% if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
        <div class="alert"><%= flash[:notice] %></div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
